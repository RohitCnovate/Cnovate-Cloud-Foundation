      "type": "Microsoft.KeyVault/vaults",
      "apiVersion": "2023-02-01",
      "name": "[parameters('keyVaultName')]",
      "location": "[parameters('location')]",
      "properties": {
        "tenantId": "[variables('tenantId')]",
        "enableRbacAuthorization": false,
        "enableSoftDelete": true,
        "enablePurgeProtection": true,
        "accessPolicies": [
          {
            "tenantId": "[variables('tenantId')]",
            "objectId": "[parameters('deployerObjectId')]",
            "permissions": {
              "keys": [
                "get",
                "list",
                "create",
                "delete",
                "wrapKey",
                "unwrapKey"
              ]
            }
          },
          {
            "tenantId": "[variables('tenantId')]",
            "objectId": "[reference(resourceId('Microsoft.ManagedIdentity/userAssignedIdentities', parameters('uamiName')), '2023-01-31').principalId]",
            "permissions": {
              "keys": [
                "get",
                "list",
                "wrapKey",
                "unwrapKey"
              ]
            }
          }
        ],
        "sku": {
          "family": "A",
          "name": "standard"
        }
      },
      "dependsOn": [
        "[resourceId('Microsoft.ManagedIdentity/userAssignedIdentities', parameters('uamiName'))]"
